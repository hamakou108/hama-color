{
  "name": "hama-color",
  "version": "0.1.1",
  "description": "Change screen edge color by URL",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:style": "stylelint '**/*.{css,scss,sass}'",
    "lint:style:fix": "stylelint --fix '**/*.{css,scss,sass}'",
    "format": "prettier --write .",
    "fix": "yarn lint:fix && yarn lint:style:fix && yarn format",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hamakou108/color-by-url.git"
  },
  "author": "hamakou108",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hamakou108/color-by-url/issues"
  },
  "homepage": "https://github.com/hamakou108/color-by-url#readme",
  "engines": {
    "node": "^18.7.0"
  },
  "dependencies": {
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^1.0.14",
    "@types/chrome": "^0.0.195",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-scss": "^4.3.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.9"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{css,sass,scss}": "stylelint --fix",
    "*.{js,jsx,ts,tsx,html,css,sass,scss,md}": "prettier --write --cache"
  }
}

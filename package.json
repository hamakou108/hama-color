{
  "name": "hama-color",
  "version": "0.2.0",
  "description": "Change screen edge color by URL",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint --fix .",
    "style-lint": "stylelint 'src/*.{css,scss,sass}'",
    "style-lint:fix": "stylelint --fix 'src/*.{css,scss,sass}'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hamakou108/color-by-url.git"
  },
  "author": "hamakou108",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hamakou108/color-by-url/issues"
  },
  "homepage": "https://github.com/hamakou108/color-by-url#readme",
  "engines": {
    "node": "^18.7.0"
  },
  "dependencies": {
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^1.0.14",
    "@types/chrome": "^0.0.195",
    "@types/jest": "^28.1.8",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": ">=6",
    "jest": "^28.1.3",
    "lint-staged": ">=10",
    "prettier": "^2.7.1",
    "stylelint": "^15.8.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-scss": "^5.0.1",
    "ts-jest": "^28.0.8",
    "typescript": "^4.7.4",
    "vite": "^3.0.9"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{css,sass,scss}": "stylelint --fix",
    "*.{js,jsx,ts,tsx,html,css,sass,scss,md}": "prettier --write --cache"
  }
}

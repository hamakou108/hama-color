  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint --fix .",
    "style-lint": "stylelint 'src/*.{css,scss,sass}'",
    "style-lint:fix": "stylelint --fix 'src/*.{css,scss,sass}'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "secretlint": "secretlint '**/*'",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hamakou108/hama-color.git"
  },
  "author": "hamakou108",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hamakou108/hama-color/issues"
  },
  "homepage": "https://github.com/hamakou108/hama-color#readme",
  "engines": {
    "node": "^24.0.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.3.0",
    "@eslint/js": "9.39.2",
    "@secretlint/secretlint-rule-preset-recommend": "11.3.1",
    "@types/chrome": "0.1.36",
    "eslint": "9.39.2",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "postcss": "8.5.6",
    "prettier": "3.8.1",
    "sass": "1.97.3",
    "secretlint": "11.3.1",
    "stylelint": "17.0.0",
    "stylelint-config-standard-scss": "17.0.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "vite": "7.3.1",
    "vitest": "4.0.18"
  },
  "packageManager": "pnpm@10.28.2",
  "lint-staged": {
    "*": [
      "secretlint"
    ]
  }
